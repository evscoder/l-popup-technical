mixin Checkbox(data, labelID = true)
    .checkbox&attributes(attributes)
        input(
            type='checkbox'
            id=data.id
            name=data.name
            required=data.required
            disabled=data.disabled
            checked=data.checked
        ).checkbox__input&attributes(data.input)
        label(for=(labelID ? data.id : undefined)).checkbox__label
            block
